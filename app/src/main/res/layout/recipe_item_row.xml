<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView android:id="@+id/recipeItemCV"
                                       android:layout_width="match_parent"
                                       android:layout_height="0dp"
                                       android:layout_gravity="center"
                                       app:cardElevation="5dp"
                                       android:layout_margin="5dp"
                                       app:cardUseCompatPadding="true"
                                       app:layout_constraintBottom_toBottomOf="parent"
                                       app:layout_constraintDimensionRatio="H,1:1"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                android:id="@+id/recipeItemIV"
                android:scaleType="centerCrop"/>
            <View android:layout_width="match_parent" android:layout_height="50dp"
                  android:background="#80000000"
                  android:layout_alignParentBottom="true"/>
            <TextView android:layout_width="match_parent" android:layout_height="50dp"
                android:id="@+id/recipeItemTV"
                android:layout_alignParentBottom="true"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>