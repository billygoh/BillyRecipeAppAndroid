<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RecipeDetailsActivity">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView android:layout_width="match_parent" android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:id="@+id/recipeDetailsIV"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/recipeDetailsPrepTimeTV"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_margin="20dp"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Ingredients"
            android:textSize="30sp"
            android:layout_margin="20dp"
            android:textColor="#000000"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="20sp"
            android:id="@+id/recipeDetailsIngredientTV"
            android:textColor="#000000"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:textStyle="bold"
                  android:text="Steps"
                  android:textSize="30sp"
                  android:layout_margin="20dp"
                  android:textColor="#000000"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:textSize="17sp"
                  android:layout_marginLeft="20sp"
                  android:layout_marginRight="20sp"
                  android:layout_marginBottom="20sp"
                  android:id="@+id/recipeDetailsStepsTV"
                  android:textColor="#000000"/>

    </LinearLayout>





</ScrollView>